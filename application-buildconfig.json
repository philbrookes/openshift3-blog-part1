{
    "apiVersion": "v1beta1",
    "kind": "BuildConfig",
    "metadata": {
        "name": "phils-build",
        "labels": {
           "name": "phils-build"
        }
    },
    "parameters": {
        "output": {
            "to": {
                "name": "phils-ruby-sample"
            }
        },
        "source": {
            "git": {
                "uri": "git://github.com/philbrookes/openshift3-blog-part1.git"
            },
            "type": "Git"
        },
        "strategy": {
            "type": "Docker",
            "dockerStrategy": {
                "from": {
                    "kind": "ImageStreamTag",
                    "name":"ruby-20-centos7:latest"
                }
            }
        }
    }
}